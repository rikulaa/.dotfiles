#!/bin/sh


# get default editor
if [ -x "$(command -v nvim)" ]; then
    VIM_EDITOR='nvim'
    # Use nvim as man pager
    export MANPAGER='nvim +Man!'
    export MANWIDTH=999
else
    if [ -x "$(command -v vim)" ]; then
        VIM_EDITOR='vim'
    else
        VIM_EDITOR='vi'
    fi
fi

export EDITOR=$VIM_EDITOR 

export ANDROID_HOME="$HOME/Library/Android/sdk/"

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# For diffing
export REVIEW_BASE=master

# Cannot use kitty inside tmux if this not set
# export TERM=screen-256color

# for gruvbox 256 colour theme. Doesnt work it osx regular terminal but it break (unlike with truecolor)
. $HOME/.config/nvim/bundle/gruvbox/gruvbox_256palette_osx.sh

# Source asdf
. $(brew --prefix asdf)/asdf.sh


export PATH="$PATH:/usr/local/sbin:/usr/local/bin:$HOME/bin:$HOME/.local/bin:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$HOME/Library/Python/3.6/bin/:/Applications/Postgres.app/Contents/Versions/latest/bin"

export TASKRC="$HOME/.config/task/.taskrc"

# Do not use history file for 'less'
export LESSHISTFILE="/dev/null"
