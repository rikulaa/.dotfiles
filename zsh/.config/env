#!/bin/sh

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"

# Opt out of dotnet telemetry
export DOTNET_CLI_TELEMETRY_OPTOUT=true

# Add laravel-herd to path
HERD_PATH="$HOME/Library/Application Support/Herd/bin"

# Move zsh config files to under ~/.config (note: needs to be sourced at .zshenv)
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export PATH="$HOME/bin:$HOME/.local/bin:$PATH:/usr/local/sbin:/usr/local/bin:$HOME/.config/composer/vendor/bin:/opt/homebrew/bin:/usr/local/share/dotnet:/Users/rikulaa/.dotnet/tools:$HERD_PATH:$HOOME/.config/composer/vendor/bin"
export JOURNAL_PATH="$HOME/Dropbox/personal/journal"

export NAMED_DIRECTORIES_CONFIG="$HOME/.config/named-directories"

export LC_MESSAGES='en_US.UTF-8'

# Do not use history file for 'less'
export LESSHISTFILE="/dev/null"

# get default editor
if [ -x "$(command -v nvim)" ]; then
    VIM_EDITOR='nvim'
    # Use nvim as man pager
    export MANPAGER='nvim +Man!'
    export MANWIDTH=999
else
    if [ -x "$(command -v vim)" ]; then
        VIM_EDITOR='vim'
    else
        VIM_EDITOR='vi'
    fi
fi
export EDITOR=$VIM_EDITOR 


# For diffing
export REVIEW_BASE=master
